{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "lib": ["esnext"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        }
    },
    "exclude": [
        "node_modules"
    ]
}